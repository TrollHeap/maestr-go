package components

// FormError : Affiche erreur validation dans form HTMX
templ FormError(message string) {
	<div
		id="form-errors"
		class="rounded-xl border border-rose-500/60 bg-rose-950/40 p-4 animate-fade-in"
		role="alert"
	>
		<div class="flex items-start gap-3">
			<span class="text-2xl">⚠️</span>
			<div class="flex-1">
				<p class="font-bold text-rose-200 mb-1">Erreur de validation</p>
				<p class="text-sm text-rose-300/90">{ message }</p>
			</div>
		</div>
	</div>
}
