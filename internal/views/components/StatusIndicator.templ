package components

import (
	"maestro/internal/models"
	"maestro/internal/views/ui/style"
)

templ StatusIndicator(ex models.Exercise) {
	<span
		class={
			"inline-flex items-center justify-center w-7 h-7 rounded-full text-sm font-bold transition-all",
			style.GetStatusBadgeClassesGlow(ex.Done),
		}
	>
		if ex.Done {
			✓
		} else {
			⊙
		}
	</span>
}
