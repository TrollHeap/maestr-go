// SessionBuilder - Page choix √©nergie
templ SessionBuilder(configs []session.Config) {
	@layouts.Base("Nouvelle Session - Maestro") {
		<!-- Background terminal + overlay scan -->
		<div class="relative min-h-[calc(100vh-4rem)] bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-slate-50">
			<!-- Scan line -->
			<div class="pointer-events-none absolute inset-0 overflow-hidden">
				<div class="absolute inset-x-0 h-px bg-gradient-to-r from-transparent via-emerald-400/40 to-transparent animate-[pulse_2s_ease-in-out_infinite] top-1/3"></div>
				<div class="absolute inset-0 bg-[linear-gradient(to_bottom,rgba(15,23,42,0)_0%,rgba(15,23,42,0.9)_100%)]"></div>
			</div>
			<div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<!-- Header -->
				<div class="mb-10">
					<div class="mb-4 inline-flex items-center gap-3 px-4 py-2 rounded-full bg-emerald-500/10 border border-emerald-400/40 text-xs font-mono text-emerald-300 tracking-widest">
						<span class="inline-block h-2 w-2 rounded-full bg-emerald-400 animate-pulse"></span>
						<span>&gt; SESSION INITIALISATION</span>
						<span class="opacity-60">|</span>
						<span>STATUS: <span class="animate-pulse">READY</span></span>
					</div>
					<h1 class="text-3xl sm:text-4xl font-extrabold text-slate-50 mb-2 tracking-tight">
						‚ö° Nouvelle session
					</h1>
					<p class="text-slate-400">
						S√©lectionne ton niveau d'√©nergie pour adapter l'intensit√© de la session.
					</p>
				</div>
				<!-- Energy Cards -->
				<div class="grid gap-6 md:grid-cols-3 mb-10">
					for _, config := range configs {
						@EnergyCard(config)
					}
				</div>
				<!-- Cancel Button -->
				<div class="flex justify-start">
					<a
						href="/"
						class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-slate-200 border border-slate-600/70 bg-slate-900/60 hover:bg-slate-800 hover:border-slate-500 transition-all"
						hx-boost="true"
					>
						<span class="text-lg">‚Üê</span>
						<span>Retour</span>
					</a>
				</div>
			</div>
		</div>
	}
}

// EnergyCard - Card √©nergie
templ EnergyCard(config session.Config) {
	<a
		href={ templ.URL(fmt.Sprintf("/session/start?energy=%d", config.Level)) }
		class={ getEnergyCardClasses(int(config.Level)) }
		hx-boost="true"
	>
		<div class="flex flex-col gap-4 h-full">
			<!-- Icon + label -->
			<div class="flex items-center justify-between gap-3">
				<div class="text-3xl">
					if config.Level == 1 {
						üîã
					} else if config.Level == 2 {
						‚ö°
					} else {
						üî•
					}
				</div>
				<div class="text-right">
					<div class="text-xs font-mono tracking-widest uppercase text-slate-400">
						√ânergie
					</div>
					<div class="text-lg font-semibold text-slate-50">
						if config.Level == 1 {
							Faible
						} else if config.Level == 2 {
							Moyen
						} else {
							√âlev√©
						}
					</div>
				</div>
			</div>
			<!-- Description -->
			<p class="text-sm text-slate-300 flex-1">
				{ config.Description }
			</p>
			<!-- Stats -->
			<div class="mt-2 grid grid-cols-2 gap-3 text-xs font-mono text-slate-300">
				<div class="space-y-1">
					<div class="uppercase tracking-wide text-slate-500">
						Max exercices
					</div>
					<div class="text-base font-semibold text-slate-100">
						{ fmt.Sprintf("%d", config.MaxExercises) }
					</div>
				</div>
				<div class="space-y-1">
					<div class="uppercase tracking-wide text-slate-500">
						Dur√©e estim√©e
					</div>
					<div class="text-base font-semibold text-slate-100">
						{ fmt.Sprintf("%d min", int(config.Duration.Minutes())) }
					</div>
				</div>
			</div>
		</div>
	</a>
}

func getEnergyCardClasses(level int) string {
	base := "group relative rounded-2xl border bg-slate-900/70 backdrop-blur-xl " +
		"p-5 shadow-lg shadow-slate-900/40 cursor-pointer " +
		"transition-all duration-200 hover:-translate-y-1 hover:shadow-2xl"

	switch level {
	case 1:
		// Faible : bleu/teal doux
		return base + " border-emerald-500/30 hover:border-emerald-400 " +
			"hover:bg-gradient-to-br hover:from-slate-900 hover:to-emerald-900/40"
	case 2:
		// Moyen : ambre/orange
		return base + " border-amber-500/30 hover:border-amber-400 " +
			"hover:bg-gradient-to-br hover:from-slate-900 hover:to-amber-900/40"
	case 3:
		// √âlev√© : rouge
		return base + " border-rose-500/30 hover:border-rose-400 " +
			"hover:bg-gradient-to-br hover:from-slate-900 hover:to-rose-900/40"
	default:
		return base + " border-slate-700 hover:border-slate-500"
	}
}
