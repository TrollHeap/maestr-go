templ Dashboard(
	stats service.DashboardStats,
	todayCount int,
	overdueCount int,
	upcomingCount int,
	overdue []models.Exercise,
	upcoming []models.Exercise,
) {
	@layouts.Base("Dashboard") {
		<!-- Hero Section with Gradient Background -->
		<div class="bg-gradient-to-r from-primary-600 to-blue-600 text-white shadow-xl">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
				<h1 class="text-4xl sm:text-5xl font-extrabold mb-4 drop-shadow-lg">
