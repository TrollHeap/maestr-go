							</span>
						</div>
						<div class="space-y-4">
							for _, ex := range overdue {
								@ExerciseCard(ex, true)
							}
						</div>
					</section>
				}
				<!-- Prochaines R√©visions -->
				if len(upcoming) > 0 {
					<section>
						<div class="flex items-center justify-between mb-6">
