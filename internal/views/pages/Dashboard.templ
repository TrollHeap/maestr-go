						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
						</svg>
					</a>
				</div>
			}
		</div>
	}
}

// ExerciseCard Component (Redesign√©)
templ ExerciseCard(ex models.Exercise, isOverdue bool) {
	<div class="card-hover bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg border border-slate-200 dark:border-slate-700">
		<div class="flex items-start justify-between mb-4">
			<div class="flex-1">
				<h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
					{ ex.Title }
				</h3>
				<div class="flex items-center gap-3 text-xs">
					<span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-lg font-semibold">
						{ ex.Domain }
					</span>
					<span class="flex items-center gap-1 text-amber-600 dark:text-amber-400">
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
						</svg>
						<span class="font-medium">{ fmt.Sprintf("%d/5", ex.Difficulty) }</span>
					</span>
				</div>
			</div>
			if isOverdue {
				<span class="flex-shrink-0 px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 text-xs font-bold rounded-full">
					En retard
				</span>
			}
		</div>
		if !ex.NextReviewAt.IsZero() {
			<div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
				</svg>
				<span class="font-medium">{ ex.NextReviewAt.Format("02 Jan 2006") }</span>
			</div>
		}
		<a
			href={ templ.URL(fmt.Sprintf("/exercise/%d", ex.ID)) }
			class="block w-full text-center px-5 py-3 bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-xl transition-all transform hover:scale-105"
			hx-boost="true"
		>
			Voir ‚Üí
		</a>
	</div>
}
